<h1>Liste des destinations</h1>
<div class="dest-index">
    <% for(const destination of destinations) { %>
        <div class="card">
            <h2><%= destination.name %> (<%= destination.location %>)</h2>
            <img src="<%= destination.thumbnail %>" alt="Image de <%= destination.name %>" >
            <p><%= destination.shortDescription %></p>
            <a href="/dest/<%= destination.id %>">Plus d'information sur ce lieu</a>
        </div>
    <% } %>
</div>